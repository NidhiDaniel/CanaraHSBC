                        </cui>
                        </uiSettings>
                        </description>
			<buttonname jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/form/textfield" required="{Boolean}true"
				fieldLabel="Button Name" name="./buttonname" />
			<claimRegisterLink jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser" required="{Boolean}true"
				fieldLabel="Button Link" name="./claimRegisterLink" />
                        <claimRegisterTargetType jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                required="{Boolean}true"
                                emptyText="Same Window"
                                fieldLabel="CTA-Button Target" name="./claimRegisterTargetType">
                <items jcr:primaryType="nt:unstructured">
                <samewindow jcr:primaryType="nt:unstructured" value="_self" text="Same Window"/>
                <newtab jcr:primaryType="nt:unstructured" value="_blank" text="New Tab"/>
                <newwindow jcr:primaryType="nt:unstructured" value="newWindow" text="New Window"/>
                </items>
                </claimRegisterTargetType>
	        </items>
        </column>
        </items>
        </content>
</jcr:root>
